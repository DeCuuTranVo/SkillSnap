@page "/"
@using SkillSnap.Client.Models
@using SkillSnap.Client.Pages

<PageTitle>SkillSnap - Portfolio Showcase</PageTitle>

<div class="hero-section">
    <img src="https://picsum.photos/1200/400?random=1" alt="Portfolio showcase" class="hero-image" />
    <div class="hero-content">
        <h1>Welcome to SkillSnap!</h1>
        <p>Discover amazing portfolios and showcase your skills.</p>
    </div>
</div>

<h2>Featured Portfolio</h2>

<ProfileCard User="@samplePortfolio" />

<div style="margin-top: 2rem;">
    <SkillTags PortfolioId="@samplePortfolio.Id" Title="Technical Skills" ShowLevel="true" Clickable="true" />
</div>

<div style="margin-top: 3rem;">
    <ProjectList PortfolioId="@samplePortfolio.Id" />
</div>

@code {
    public PortfolioUser samplePortfolio = new PortfolioUser
    {
        Id = 2,
        Name = "Jane Doe",
        Bio = "Full Stack Developer with a passion for creating dynamic web applications.",
        ProfileImageUrl = "https://example.com/images/jane.png"
    };
    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
    }
}
